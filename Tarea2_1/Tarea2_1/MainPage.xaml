<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Tarea2_1.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Ejercicio 1_2" HorizontalTextAlignment="Center" TextColor="White" FontSize="24"/>
        </Frame>
        <Label FontSize="16" Padding="30,24,30,0">
            <Label.FormattedText>
                <FormattedString>
                    <FormattedString.Spans>
                    </FormattedString.Spans>
                </FormattedString>
            </Label.FormattedText>
        </Label>
        <Entry x:Name="txtnombre" Placeholder="Ingrese sus nombres" Keyboard="Text"/>
        <Entry x:Name="txtapellido" Placeholder="Ingrese sus apellidos" Keyboard="Text"/>
        <Entry x:Name="txtedad" Placeholder="Ingrese su edad" Keyboard="Numeric"/>
        <Entry x:Name="txtcorreo" Placeholder="Ingrese su correo" Keyboard="Text"/>

    
        <Button x:Name="btnsegunda" Text="Enviar Información" Clicked="btnsegunda_Clicked" BackgroundColor="Brown" TextColor="White" />

    </StackLayout>

</ContentPage>
